<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/backgroundImage"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_alignParentTop="true"
        android:src="@color/black"
        android:background="@drawable/hot_sales_corners"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/new_notify"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/ellipse_activate"
        android:gravity="center_horizontal|center"
        android:maxLines="1"
        android:text="New"
        android:textAppearance="@style/new_str"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/name_hot_sales"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="60dp"
        android:textStyle="bold"
        android:gravity="center_horizontal|top"
        android:text="Название"
        android:textAppearance="@style/hot_sales_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/sub_text_hot_sales"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal|top"
        android:text="Описание товара"
        android:textAppearance="@style/s_per_mega_"
        app:layout_constraintStart_toStartOf="@+id/name_hot_sales"
        app:layout_constraintTop_toBottomOf="@+id/name_hot_sales" />

    <TextView
        android:id="@+id/btn_buy_now"
        android:layout_width="100dp"
        android:layout_height="25dp"
        android:layout_marginTop="22dp"
        android:background="@drawable/background_btn_hot_sales"
        android:text="@string/buy_now_"
        android:textStyle="bold"
        android:gravity="center_horizontal|center"
        android:textAppearance="@style/buy_now_"
        app:layout_constraintStart_toStartOf="@+id/name_hot_sales"
        app:layout_constraintTop_toBottomOf="@+id/sub_text_hot_sales" />


</androidx.constraintlayout.widget.ConstraintLayout>